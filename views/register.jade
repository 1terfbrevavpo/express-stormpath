extends base

block vars
  - var title = 'Create an Account'
  - var description = 'Create a new account.'
  - var bodytag = 'register'

block body
  .container.custom-container
    .va-wrapper
      .view.registration-view.container
        .box.row
          .col-sm-12
            .header
              span Create Account

            if error
              .alert.alert-danger
                p #{error}

            form.registration-form.form-horizontal.sp-form(method='post', role='form')
              input(name='_csrf', type='hidden', value=csrfToken)

              if app.get('stormpathEnableUsername')
                .form-group.group-username(form-group='true')
                  label.col-sm-4 Username
                  .col-sm-8
                    if app.get('stormpathRequireUsername')
                      input.form-control(placeholder='Username', name='username', required='true', type='text')
                    else
                      input.form-control(placeholder='Username', name='username', type='text')

              if app.get('stormpathEnableGivenName')
                .form-group.group-first-name(form-group='true')
                  label.col-sm-4 First Name
                  .col-sm-8
                    if app.get('stormpathRequireGivenName')
                      input.form-control(placeholder='First Name', name='givenName', required='true', type='text')
                    else
                      input.form-control(placeholder='First Name', name='givenName', type='text')

              if app.get('stormpathEnableMiddleName')
                .form-group.group-middle-name(form-group='true')
                  label.col-sm-4 Middle Name
                  .col-sm-8
                    if app.get('stormpathRequireMiddleName')
                      input.form-control(placeholder='Middle Name', name='middleName', required='true', type='text')
                    else
                      input.form-control(placeholder='Middle Name', name='middleName', type='text')

              if app.get('stormpathEnableSurname')
                .form-group.group-last-name(form-group='true')
                  label.col-sm-4 Last Name
                  .col-sm-8
                    if app.get('stormpathRequireSurname')
                      input.form-control(placeholder='Last Name', name='surname', required='true', type='text')
                    else
                      input.form-control(placeholder='Last Name', name='surname', type='text')

              .form-group.group-email(form-group='true')
                label.col-sm-4 Email
                .col-sm-8
                  input.form-control(placeholder='Email', name='email', required='true', type='text')

              .form-group.group-password(form-group='true')
                label.col-sm-4 Password
                .col-sm-8
                  input.form-control(placeholder='Password', name='password', required='true', type='password')

              button.btn.btn-register.btn-sp-green(type='submit') Create Account

        a.to-login(href=app.get('stormpathLoginUrl')) Back to Log In
