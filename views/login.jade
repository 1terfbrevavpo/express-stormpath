extends base

- var title = 'Log In'
- var description = 'Log into your account!'
- var bodytag = 'login'

block body
  div.container.custom-container
    div.va-wrapper
      div.view.login-view.container
        div.box.row
          div.email-password-area.col-xs-12.large.col-sm-12
            div.header
              span.
                Log In or <a href='/register'>Create Account</a>

            if error
              .alert.alert-danger.bad-login
                p #{error}

            form.login-form.form-horizontal(method='post', role='form')
              input(name='_csrf', type='hidden', value=csrfToken)

              div.form-group.group-email
                label.col-sm-4 Email
                div.col-sm-8
                  - var data = (form.fields.login.value ? form.fields.login.value : '')
                  input.form-control(autofocus='true', placeholder='Email', required='true', name='login', type='text', value=data)

              div.form-group.group-password
                label.col-sm-4 Password
                div.col-sm-8
                  input.form-control(placeholder='Password', type='password', name='password')

              div
                button.login.btn.btn-login.btn-sp-green(type='submit') Log In
